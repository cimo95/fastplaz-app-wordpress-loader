
# Generated by FastPlaz

RewriteEngine On
AddHandler cgi-script .cgi
AddHandler cgi-script .bin
AddHandler cgi-script .pas
AddHandler cgi-script .exe
Options +ExecCGI

DirectoryIndex wordpress.bin
ErrorDocument 404 404.html
ErrorDocument 500 500.html

<FilesMatch ".*\.(cfg|ini)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# add trailing slash
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)([^/])$ /$1$2/ [L,R=301]

# language
RewriteRule ^(id|en|us)/$ ?lang=$1 [QSA,L]


#=== wordpress [L,NC,NS] [QSA,L]
RewriteRule ^news/$ wpnews/ [QSA,L]
RewriteRule ^tags/([A-Za-z0-9=-]+)/$ tag/$1/ [QSA,L]
RewriteRule ^category/([A-Za-z0-9=-]+)/$ ?mod=category&name=$1 [QSA,L]
RewriteRule ^([0-9_]+)/([0-9_]+)/$ ?mod=wpnews&year=$1&month=$2 [QSA,L]
RewriteRule ^([0-9_]+)/([0-9_]+)/(.*)/$ ?mod=wpnews&year=$1&month=$2&permalink=$3 [QSA,L]
#=== wordpress - end



RewriteCond %{REQUEST_FILENAME} -d [OR]
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -l
RewriteRule ^(.*)$ - [NC,L]
#RewriteRule ^(.*)$ 404.php [QSA,L]
RewriteRule ^(.*)$ wordpress.bin/$1 [QSA,L]
